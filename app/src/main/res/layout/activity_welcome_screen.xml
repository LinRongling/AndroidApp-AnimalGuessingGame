<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_screen_bg"
    android:orientation="vertical"
    tools:context=".WelcomeScreen">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2.5"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:shadowColor="#909090"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:text="Welcome to Animal Guessing Game"
        android:textColor="#FFF6EB"
        android:textSize="36sp" />

    <Button
        android:id="@+id/start"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button_home2"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="Start Game\n(3 Guesses)"
        android:textColor="#904646"
        android:textSize="24sp" />

    <Button
        android:id="@+id/settings"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button_home1"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="ðŸ”§Settings"
        android:textColor="#FFFDFD"
        android:textSize="22sp" />

    <Button
        android:id="@+id/score"
        android:layout_width="190dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button_quit"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="ðŸ“œScore Board"
        android:textColor="#FBE378"
        android:textSize="20sp" />

    <Button
        android:id="@+id/quit"
        android:layout_width="170dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/custom_button_home3"
        android:fontFamily="@font/fredoka_one"
        android:gravity="center"
        android:text="ðŸ’¨ Quit Game"
        android:textColor="#034D8E"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

</LinearLayout>